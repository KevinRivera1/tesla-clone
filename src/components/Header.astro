<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 40;
    padding-inline: 1rem;
  }

  .header > h1 {
    flex: 1;
    flex-basis: 0;
  }

  .header > h1 a {
    width: 7rem;
  }

  .header nav a {
    padding: 1rem;
    font-size: 0.9375rem;
  }

  .nav1 {
    display: flex;
    justify-content: center;
  }

  .nav2 {
    display: flex;
    justify-content: flex-end;
    flex: 1;
    flex-basis: 0;
  }
</style>

